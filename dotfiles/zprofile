if [ -z "$WAYLAND_DISPLAY" ] && [ -n "$XDG_VTNR" ]; then
  if [ "$XDG_VTNR" -le 3 ]; then
    export XDG_CURRENT_DESKTOP=sway
    export XDG_SESSION_DESKTOP=sway
    exec sway --unsupported-gpu
  elif [ "$XDG_VTNR" -eq 4  ]; then
    tmux
  fi
fi


