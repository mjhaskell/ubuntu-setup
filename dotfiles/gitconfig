[core]
    editor = vim
    pager = delta
[push]
    default = simple
[pull]
    rebase = true
[init]
    defaultBranch = main
[diff]
    ; change the default word regex to separate words with punctuation as well
    ; as whitespace (default is whitespace only - [^[:space:]]+)
    wordRegex = [[:alnum:]_]+|[^[:alnum:]_[:space:]]+
    wsErrorHighlight = all
[interactive]
    diffFilter = delta --color-only
[delta]
    ; show possible themes with:
    ;   $ delta --list-syntax-themes
    ;   $ delta --show-syntax-themes
    ; syntax-theme = gruvbox-dark, TwoDark, Coldark-Dark
    syntax-theme = Dracula
    line-numbers = true
    side-by-side = true
    navigate = true
    dark = true
[merge]
    conflictStyle = zdiff3
[alias]
    co = checkout
    st = status
    cm = commit
    ; df = diff --ws-error-highlight=all
    dw = diff --color-words
    subup = submodule update --init --recursive
    graph = log --oneline --graph --decorate --all

