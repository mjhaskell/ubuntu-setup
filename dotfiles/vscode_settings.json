{
  "editor.wordWrap": "wordWrapColumn",
  "editor.wordWrapColumn": 120,
  "editor.rulers": [80, 90, 120],
  "editor.tabSize": 2,
  "editor.minimap.maxColumn": 90,
  "editor.minimap.enabled": false,
  "editor.minimap.autohide": true,
  "editor.fontFamily": "'CodeNewRoman Nerd Font Mono','Droid Sans Mono', 'monospace'",
  "editor.fontSize": 12,
  "editor.insertSpaces": true,
  "editor.renderWhitespace": "all",
  "editor.lineNumbers": "relative",
  "editor.renderLineHighlight": "all",
  // "editor.mouseWheelZoom": true,
  "editor.definitionLinkOpensInPeek": true,
  "editor.suggestSelection": "first",
  "editor.acceptSuggestionOnEnter": "smart",
  "editor.bracketPairColorization.enabled": true,
  // "editor.language.colorizedBracketPairs":
  "editor.semanticTokenColorCustomizations": {
    "[Default Dark Modern]": {
      "rules": {
        "selfParameter": "#569CD6",
        "clsParameter": "#569CD6"
      }
    }
  },

  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",

  "extensions.autoUpdate": false,

  "files.trimFinalNewlines": true,
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,
  "files.exclude": {
    "**/build": true,
    "**/devel": true
  },
  "files.associations": {
    "*.tpp": "cpp",
    "*.sdf": "xml",
    "*.urdf": "xml"
  },

  "terminal.integrated.defaultProfile.linux": "zsh",
  // "terminal.external.linuxExec": "termite",
  "terminal.integrated.fontFamily": "CodeNewRoman Nerd Font",
  "terminal.integrated.fontSize": 12,
  "debug.console.fontSize": 12,

  "python.jediEnabled": false,
  "python.languageServer": "Pylance",
  "python.venvPath": "~/.virtualenvs",
  "python.defaultInterpreterPath": "/home/mat/.virtualenvs/default",
  "python.analysis.typeCheckingMode": "basic",
  "debugpy.debugJustMyCode": false,
  "jupyter.debugJustMyCode": false,
  "terminal.integrated.env.linux": {
    "PYTHONPATH": "${workspaceFolder}:${env:PYTHONPATH}"
  },
  // "python.analysis.inlayHints.callArgumentNames": "all",
  // for pybind paths to get intellisense
  // "python.analysis.extraPaths": [],
  "[python]": {
    "editor.tabSize": 4,
    "editor.formatOnType": true
  },
  "[cpp]": {
    "editor.tabSize": 2
  },
  "[markdown]": {
    "editor.wordWrap": "on",
    // "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 120
  },
  "[html]": {
    "editor.wordWrapColumn": 120
  },

  "C_Cpp.default.includePath": [
    "/usr/include/**",
    "/usr/local/include/**",
    "/opt/**",
    "${workspaceFolder}/**"
  ],
  "C_Cpp.default.compilerPath": "/usr/bin/gcc",
  "C_Cpp.default.cppStandard": "c++14",
  "C_Cpp.default.cStandard": "c11",
  "cmake.generator": "Ninja",
  // "cmake.generator": "Unix Makefiles",
  "cmake.configureOnOpen": true,
  "cmake.configureOnEdit": true,
  // "cmake.configureArgs": [],

  "liveshare.accountProvider": "",
  "liveshare.account": "",
  "liveshare.anonymousGuestApproval": "accept",
  "liveshare.audio.joinCallBehavior": "accept",

  "vim.vimrc.enable": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.sneak": true,
  "vim.sneakReplacesF": true,
  "vim.whichwrap": "h,l,<,>,[,]",
  "vim.textwidth": 90,
  "vim.ignorecase": false,
  // "vim.foldfix": true,
  "vim.timeout": 200,
  "vim.cursorStylePerMode.insert": "line",
  "vim.cursorStylePerMode.normal": "block",
  "vim.cursorStylePerMode.replace": "block-outline",
  "vim.leader": "\\",
  "vim.surround": true,
  "vim.handleKeys": {
    "<C-d>": false,
    "<C-/>": false,
    "<C-z>": false,
    "<C-Z>": false,
    "<C-]>": false,
    "<C-[>": false,
    "<C-b>": false,
    "<C-y>": true,
    "Up": true,
    "Down": true,
    "Left": true,
    "Right": true
  },
  "vim.insertModeKeyBindingsNonRecursive": [
    {
      "before": ["<leader>", "c", "i"],
      "commands": ["editor.action.commentLine"]
    },
    {
      "before": ["j", "k"],
      "after": ["<esc>"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    // {
    //     "before": ["k"],
    //     "after": ["g", "k"]
    // },
    // {
    //     "before": ["j"],
    //     "after": ["g", "j"]
    // },
    // {
    //     "before": ["<leader>", "c", "i"],
    //     "commands": ["editor.action.commentLine"]
    // },
    // {
    //     "before": ["m"],
    //     "commands": ["editor.action.toggleMinimap"]
    // }
    // {
    //     "before": ["J"],
    //     "after": ["10j"]
    // }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    // {
    //     "before": ["k"],
    //     "after": ["g", "k"]
    // },
    // {
    //     "before": ["j"],
    //     "after": ["g", "j"]
    // }
  ],
  "latex-workshop.view.pdf.viewer": "tab",
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook"
  },
  "window.zoomLevel": 1,
  "cmake.pinnedCommands": [
    "workbench.action.tasks.configureTaskRunner",
    "workbench.action.tasks.runTask"
  ],
  "debug.inlineValues": "off"
}
