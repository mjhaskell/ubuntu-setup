# ---------- Scratchpad Windows ----------- #
# X11
# for_window [instance="spad_*"] floating enable
# for_window [instance="spad_normal"] move position center
# for_window [instance="spad_math"] move position 1050px 700px
# for_window [instance="spad_*"] move scratchpad
# for_window [instance="spad_*"] sticky enable
# for_window [instance="spad_normal"] resize set 625 400
# for_window [instance="spad_math"] resize set 750 300
# for_window [instance="spad_*"] border pixel 5

# Wayland
for_window [app_id="spad_*"] move to scratchpad, sticky enable, border pixel 5
for_window [app_id="spad_normal"] resize set 625 400, move position center
for_window [app_id="spad_math"] resize set 750 300, move position 1050px 700px

# for_window [app_id="screensaver"] fullscreen global
# for_window [app_id="screensaver"] fullscreen


# ---------- Chromium Apps ----------- #
# Teams
for_window [app_id="cifhbcnohmdccbgoicgdjpfamggdegmo"] move to scratchpad, resize set 1500 1000, move position center
# for_window [app_id=".*teams\.microsoft\.com.*"] move to scratchpad, resize set 1500 1000, move position center

# BYU Outlook
for_window [app_id="pkooggnaal.*"] move to scratchpad, resize set 1500 1000, move position center

# Bitwarden extension
for_window [app_id="chrome-nngcec.*"] floating enable


# ---------- Other Apps ----------- #
for_window [app_id="flameshot"] border pixel 0, floating enable, fullscreen disable, move absolute position 0 0
for_window [app_id="signal"] move to scratchpad
for_window [app_id="python3"] floating enable


